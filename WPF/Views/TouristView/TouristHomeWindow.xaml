                            </Grid>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Border BorderThickness="0 0 0 0"
                BorderBrush="{DynamicResource  MainColor3}"
                Grid.Row="1">
            <Grid Background="{DynamicResource  MainColor2}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Button 
                            BorderThickness="0"
                            Grid.Column="2"
                            
                            Template="{StaticResource CustomButtonTemplate}"
                            Height="auto"
                            Width="auto"
                            Cursor="Hand"
                            Background="Transparent"
                            VerticalContentAlignment="Bottom"   
                            HorizontalContentAlignment="Left"
                            Click="Requests_Click">
                    <Border
                            CornerRadius="4"
                            Width="auto"
                            Padding="0 0 10 0"
                            Style="{StaticResource BorderHover}"
                            Height="50"
                            Background="{Binding IsRequestsClicked, Converter={StaticResource BoolToColorConverter}}"
                            HorizontalAlignment="Left"
                            BorderThickness="0">
                        <StackPanel 
                                    Orientation="Horizontal">

                            <Image Source="C:\Users\Korisnik\Desktop\ikone\requests.png"
                                    Height="30"
                                    Width="30"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                       Margin="5 0 10 0"
                                    />
                            <TextBlock Text="{DynamicResource Your Requests}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Foreground="{DynamicResource  Font1}"
                                           FontWeight="Normal"
                                           FontSize="20"></TextBlock>

                        </StackPanel>
                    </Border>
                </Button>

                <Button 
                            BorderThickness="0"
                    Grid.Column="0"
                            Template="{StaticResource CustomButtonTemplate}"
                            Height="auto"
                            Width="auto"
                            Margin="35 0 50 0"
                            Cursor="Hand"
                            Background="Transparent"
                            VerticalContentAlignment="Bottom"
                            HorizontalContentAlignment="Left"
                            Click="Button_Click_1"
                            >
                    <Border
                            CornerRadius="4"
                            Width="auto"
                            Padding="0 0 10 0"
                            Style="{StaticResource BorderHover}"
                            Background="{Binding IsHomePageClicked, Converter={StaticResource BoolToColorConverter}}"
                            Height="50"
                            HorizontalAlignment="Left"
                            BorderThickness="0">
                        <StackPanel 
                                    Orientation="Horizontal">

                            <Image Source="C:\Users\Korisnik\Desktop\ikone\homepage.png"
                                    Height="30"
                                    Width="30"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                       Margin="5 0 10 0"
                                    />
                            <TextBlock Text="{DynamicResource Home}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Foreground="{DynamicResource  Font1}"
                                           FontWeight="Normal"
                                           FontSize="20"></TextBlock>

                        </StackPanel>
                    </Border>
                </Button>
                
                
                <Button 
                            BorderThickness="0"
                            Template="{StaticResource CustomButtonTemplate}"
                            Height="auto"
                            Width="auto"
                    Grid.Column="1"
                            Background="Transparent"
                            Cursor="Hand"
                            Margin="0 0 50 0"
                            VerticalContentAlignment="Bottom"
                            HorizontalContentAlignment="Left"
                            Click="YourTours_Click">
                    <Border
                            CornerRadius="4"
                            Padding="0 0 10 0"
                            Width="auto"
                            Style="{StaticResource BorderHover}"
                            Background="{Binding IsToursClicked, Converter={StaticResource BoolToColorConverter}}"
                            Height="50"
                            HorizontalAlignment="Left"
                            BorderThickness="0">
                        <StackPanel 
                                    Orientation="Horizontal"
                                    
                                    >

                            <Image Source="C:\Users\Korisnik\Desktop\ikone\map.png"
                                    Height="30"
                                    Width="30"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                       Margin="5 0 10 0"
                                    />
                            <TextBlock Text="{DynamicResource Your Tours}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Foreground="{DynamicResource  Font1}"
                                           FontWeight="Normal"
                                           FontSize="20"></TextBlock>

                        </StackPanel>
                    </Border>
                </Button>
                
                
                
                <Button 
                            BorderThickness="0"
                            Template="{StaticResource CustomButtonTemplate}"
                            Height="auto"
                            Width="auto"
                               Grid.Column="3"
                            Cursor="Hand"                    
                            Background="Transparent"
                            Margin="50 0 0 0"
                            VerticalContentAlignment="Bottom"
                            HorizontalContentAlignment="Left"
                            Click="Notifications_Click">
                    <Border
                            CornerRadius="4"
                            Padding="0 0 10 0"
                            Width="auto"                           
                            Style="{StaticResource BorderHover}"
                            Height="50"
                            Background="{Binding IsNotificationsClicked, Converter={StaticResource BoolToColorConverter}}"
                            HorizontalAlignment="Left"
                            BorderThickness="0">
                        <StackPanel 
                                    Orientation="Horizontal"
                                    
                                    >

                            <Image Source="C:\Users\Korisnik\Desktop\ikone\bell1.png"
                                    Height="30"
                                    Width="30"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                       Margin="5 0 10 0"
                                    />
                            <TextBlock Text="{DynamicResource Notifications}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Foreground="{DynamicResource Font1}"
                                           FontWeight="Normal"
                                           FontSize="20"></TextBlock>

                        </StackPanel>
                    </Border>
                </Button>
