<UserControl x:Class="BookingApp.WPF.Views.TouristView.PastToursUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookingApp.WPF.Views.TouristView"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:converter="clr-namespace:BookingApp.WPF.Converters"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="587" d:DesignWidth="1152">
    <UserControl.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converter:FirstImagePathConverter x:Key="FirstImagePathConverter" />
        <converter:BoolToColorConverter x:Key="BoolToColorConverter" />
        <Style TargetType="Label" x:Key="TabsLabelsStyle">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="HoverBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="0 20 10 20"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Yellow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="TabsButtonsStyle">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="90 20 100 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="1 1 1 1"
                    CornerRadius="5"
                    BorderBrush="{DynamicResource MainColor1}"
                    Grid.ColumnSpan="4"/>
            <Button Grid.Column="0"
                Content="{DynamicResource Live tour}"
                    Foreground="{DynamicResource Font1}"
                Style="{StaticResource TabsButtonsStyle}"
                Command="{Binding LiveTourTabCommand}"/>
            <Button Grid.Column="1"
                Content="{DynamicResource Future Tours}"
                Style="{StaticResource TabsButtonsStyle}"
                    Foreground="{DynamicResource Font1}"
                Command="{Binding FutureToursCommand}"/>
            <Button Grid.Column="2"
                Content="{DynamicResource Past Tours}"
                Style="{StaticResource TabsButtonsStyle}"
                    Foreground="{DynamicResource WhiteWhite}"
                Background="{DynamicResource MainColor1}"
                Command="{Binding PastToursTabCommand}"/>
            <Button Grid.Column="3"
                Content="{DynamicResource Vouchers}"
                Foreground="{DynamicResource Font1}"
                Style="{StaticResource TabsButtonsStyle}"
                Command="{Binding VouchersTabCommand}"/>
        </Grid>
        <Border 
                BorderThickness="1 1 1 1"
                CornerRadius="5"
                BorderBrush="{DynamicResource MainColor1}"
                Grid.Row="1"
                Height="480"
                Margin="0 -1 0 0">
            <ListView BorderThickness="0" 
                      Grid.Row="1"                     
                      Background="Transparent"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ItemContainerStyle="{StaticResource CustomListView}"
                      ScrollViewer.CanContentScroll="False"
                      ItemsSource="{Binding PastTourRealisations}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding SelectionChangedCommand}" 
                                   CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListView}}}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{DynamicResource MainColor1}"
                                BorderThickness="1.5"
                                CornerRadius="20"
                                Height="auto"
                                Width="auto"
                                Padding="0 0 0 10"
                                Visibility="{Binding IsRateable, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="35 10 30 10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Image Source="{Binding TourImagesPath, Converter={StaticResource FirstImagePathConverter}}"
                                       Height="200"
                                       Width="300"
                                       HorizontalAlignment="Left"
                                       Grid.Column="0"
                                       Margin="35 20 0 0"/>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <RowDefinition Height="auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0"
                                                Orientation="Horizontal"
                                                Margin="6 5 0 0"
                                                HorizontalAlignment="Left">
                                            <Label Margin="0 5 0 0"
                                                   FontSize="22"
                                                   FontFamily="Verdana"
                                                   FontWeight="DemiBold"
                                                   Foreground="{DynamicResource Font1}"
                                                   Content="{Binding TourName}"/>
                                            <Image Source="C:\Users\Korisnik\Desktop\ikone\verified.png"
                                                   Height="15"
                                                   Width="15"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"
                                                   Margin="4 4 0 0"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1"
                                                    Visibility="{Binding IsRated, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    Orientation="Horizontal"
                                                    Margin="2 10 0 0"
                                                    HorizontalAlignment="Left">
                                            <Image Source="{Binding Star1Path}"
                                               Height="15"
                                               Width="15"   
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="8 0 0 0"/>
                                            <Image Source="{Binding Star2Path}"
                                               Height="15"
                                               Width="15"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0 0 0 0"/>
                                            <Image Source="{Binding Star3Path}"
                                               Height="15"
                                               Width="15"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0 0 0 0"/>
                                            <Image Source="{Binding Star4Path}"
                                               Height="15"
                                               Width="15"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0 0 0 0"/>
                                            <Image Source="{Binding Star5Path}"
                                               Height="15"
                                               Width="15"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0 0 0 0"/>
                                        </StackPanel>
                                        <TextBlock Foreground="{DynamicResource Font1}"
                                            Visibility="{Binding NotRated, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Margin="13 0 0 0"  Grid.Row="2" Text="{DynamicResource No Rating}">
                                        </TextBlock>
                                        <StackPanel Grid.Row="3"
                                                    Orientation="Horizontal"
                                                    Margin="2 0 0 0"
                                                    HorizontalAlignment="Left">
                                            <Image Source="C:\Users\Korisnik\Desktop\ikone\location.png"
                                               Height="17"
                                               Width="17"
                                               Grid.Row="2"
                                               Grid.Column="2"
                                               HorizontalAlignment="Left"
                                               Margin="7 4 0 0"/>
                                            <Label Margin="-2 4 0 0"
                                               Grid.Row="0"
                                                   Foreground="{DynamicResource Font1}"
                                               FontSize="11"
                                               FontFamily="Verdana"
                                               Width="auto"
                                               Content="{Binding Location}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="4"
                                                    Orientation="Horizontal"
                                                    Margin="2 0 0 0"
                                                    HorizontalAlignment="Left">
                                            <Image Source="C:\Users\Korisnik\Desktop\ikone\time.png"
                                               Height="17"
                                               Width="17"
                                               Grid.Row="2"
                                               Grid.Column="2"
                                               HorizontalAlignment="Left"
                                               Margin="7 4 0 0"/>
